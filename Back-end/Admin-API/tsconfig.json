{
    "compilerOptions": {
        "module": "commonjs", // utiliser les require au lieu des import dans le js généré
        "resolveJsonModule": true,
        "esModuleInterop": true, // import express
        "rootDir": "src",
        "outDir": "dist",
        "target": "ES6",
        "strict": true, // forcer a typer et a avoi un code un petit peu plus propre
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "noImplicitAny": true
    },
    "include" : [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}